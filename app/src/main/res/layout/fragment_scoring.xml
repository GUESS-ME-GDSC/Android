<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/base_yellow"
    tools:context=".ui.view.ScoringFragment">

    <ImageView
        android:id="@+id/image_quiz_user_answer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/base_green_stroke_shape"
        android:contentDescription="@string/person_profile_description"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_base_profile"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/layout_quiz_answer_data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view_quiz_answer_for_profile"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/base_green_stroke_image"
        app:layout_constraintBottom_toBottomOf="@id/image_quiz_user_answer"
        app:layout_constraintLeft_toLeftOf="@id/image_quiz_user_answer"
        app:layout_constraintRight_toRightOf="@id/image_quiz_user_answer"
        app:layout_constraintTop_toTopOf="@id/image_quiz_user_answer"/>

    <LinearLayout
        android:id="@+id/layout_quiz_answer_data"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/base_green_stroke_shape"
        app:layout_constraintBottom_toTopOf="@id/txt_quiz_result"
        app:layout_constraintTop_toBottomOf="@id/image_quiz_user_answer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/txt_quiz_answer_key"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txt_quiz_answer_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:padding="12dp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_quiz_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/btn_quiz_answer_next"
        app:layout_constraintTop_toBottomOf="@id/layout_quiz_answer_data"
        app:layout_constraintLeft_toLeftOf="@id/image_quiz_user_answer"
        app:layout_constraintRight_toRightOf="@id/image_quiz_user_answer"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_quiz_answer_next"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/base_green_round_shape"
        android:padding="15dp"
        android:text="@string/quiz_answer_next"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt_quiz_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_quiz_stop"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_quiz_stop"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/base_green_round_shape"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="15dp"
        android:text="@string/quiz_btn_stop"
        android:gravity="center"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_quiz_answer_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>